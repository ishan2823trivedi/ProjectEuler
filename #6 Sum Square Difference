#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;


int main(){
    int t;
    cin >> t;
    for(int a0 = 0; a0 < t; a0++){
        long int n;
        cin >> n;
        long int s1 = n*n*(n+1)*(n+1)/4;
        long int s2 = n*(n+1)*((2*n)+1)/6;
        long int d= abs(s1-s2);
        cout<<d<<"\n";
    }
    return 0;
}
